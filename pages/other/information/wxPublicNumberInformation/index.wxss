@import "../../../../app.wxss";

.materialScrollList {
  border: 0px red solid;
  width: 100%;
  height: 100%;
}

.materialItemView {
  border: 0rpx solid #09bb07;
  border-radius: 12rpx;
  position: relative;
  width: 98%;
  height: 180rpx;
  font-size: 28rpx;
  color: #353535;
  letter-spacing: -0.68rpx;
  display: flex;
  display: -webkit-flex;
  overflow: hidden;
  margin: 0px auto;
  margin-top: 10rpx;
}

.thumbImageView {
  border: 0rpx solid #09bb07;
  width: 180rpx;
  height: 180rpx;
}

.thumbImage {
  border: 0rpx solid #09bb07;
  width: 200rpx;
  height: 200rpx;
}

.titleAndDigestView {
  border: 0rpx solid #09bb07;
  background-color: #fff;
  width: 100%;
  height: 100%;
}

.titleView {
  border: 0rpx solid #09bb07;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #fff;
  justify-content: left;
  align-items: left;
  text-align: left;
  font-size: 30rpx;
  color: #353535;
  padding: 5rpx;
  padding-left: 15rpx;
}

.digestView {
  border: 0rpx solid #09bb07;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  justify-content: left;
  align-items: left;
  text-align: left;
  font-size: 25rpx;
  color: #b2b2b2;
  padding: 5rpx;
  padding-left: 15rpx;
}
