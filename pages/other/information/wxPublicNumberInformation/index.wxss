@import "../../../../app.wxss";

.materialScrollList {
  border: 0px red solid;
  width: 100%;
  height: 100%; 
}

.materialItemView {
  border: 0rpx solid #09bb07;
  border-bottom: 2rpx solid rgba(121,100,244,0.10);
  width: 98%;
  height: 180rpx;
  font-size: 28rpx;
  color: #353535;
  margin: 0px auto;
  margin-top: 10rpx;
  display: flex;  
  flex-direction: row;  
}




.titleAndDigestView {
  border: 0rpx solid #09bb07;
  background-color: #fff;
  display: positive;
  width: 80%;
  height: 100%;
}

.titleView {
  border: 0rpx solid #09bb07;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  justify-content: left;
  align-items: left;
  text-align: left;
  font-size: 30rpx;
  color: #353535;
  padding-left: 15rpx;
}

.digestView {
  border: 0rpx solid #09bb07;
  width: 100%;
  height: 75rpx;
  background-color: #fff;
  justify-content: left;
  align-items: left;
  text-align: left;
  font-size: 25rpx;
  color: #b2b2b2;
  padding-left: 15rpx;
}

.timeAndFlagView {
  border: 0rpx solid #09bb07;
  width: 100%;
  height: 35rpx;
  background-color: #fff;
  justify-content: left;
  align-items: left;
  text-align: left;
  font-size: 25rpx;
  color: #b2b2b2;
  padding-left: 15rpx;
}




.thumbImageView {
  border: 0rpx solid #09bb07;
  border-radius: 12rpx;
  width: 20%;
  height: 100%;
  background-color: #fff;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}

.thumbImage {
  border: 0rpx solid #09bb07;
  border-radius: 12rpx;
  width: 150rpx;
  height: 150rpx;
  margin-right: 15rpx;
}